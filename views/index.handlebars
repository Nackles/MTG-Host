<div class="container">
  <div class="row">
    <div class="col s12">
      {{!-- Password verification ids: (password, password-confirm --}}
      <ul class="collapsible popout">
        <li class="active">
          <div class="collapsible-header">Login</div>
          <div class="collapsible-body">
            {{#if error}} <h4>Incorrect username or password!</h4> {{/if}}
            <form action="/api/login" class="text-center" method="post"
              onsubmit="return (typeof submitted == 'undefined') ? (submitted = true) : !submitted">
              <div>
                <label>Username:</label>
                <input type="text" name="username" />
              </div>
              <div>
                <label>Password:</label>
                <input type="password" name="password" />
              </div>
              <div>
                <input class="btn" type="submit" value="Log In" />
              </div>
            </form>
          </div>
        </li>
        <li>
          <div class="collapsible-header">Create Login</div>
          <div class="collapsible-body">
            <form action="/api/signup" class="text-center validatedForm" method="post"
              onsubmit="return (typeof submitted == 'undefined') ? (submitted = true) : !submitted">
              <div>
                <label>Username:</label>
                <input type="text" name="username" placeholder="Username" />
              </div>
              <div>
                <label>Password:</label>
                <input type="password" name="password" id="password" placeholder="Password" />
              </div>
              <div>
                <label>Verify Password:</label>
                <input type="password" id="password-confirm" name="password-verify" placeholder="Confirm Password" />
              </div>
              <div>
                <input class="btn" type="submit" value="Sign Up" />
              </div>
            </form>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>